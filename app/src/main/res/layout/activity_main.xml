<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="368dp"
        android:layout_height="545dp"
        app:srcCompat="@drawable/trafficlight" />

    <ImageView
        android:id="@+id/red_light"
        android:layout_width="105dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="146dp"
        android:src="@drawable/red_light"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/yellow_light"
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="160dp"
        android:src="@drawable/yellow_light"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/green_light"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="345dp"
        android:layout_marginEnd="167dp"
        android:src="@drawable/green_light"
        android:visibility="invisible" />

    <Button
        android:id="@+id/trafficButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/green_light"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="165dp"
        android:background="@color/red"
        app:backgroundTint="@null"
        android:text="STOP"
        android:textColor="#000000"
        android:textSize="18sp"
        android:visibility="visible" />


</RelativeLayout>
